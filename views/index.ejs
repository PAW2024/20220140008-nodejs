<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Supply Shop</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .home-page {
            text-align: center;
        }

        /* Carousel Styles */
        .carousel {
            position: relative;
            overflow: hidden;
            height: 500px;
        }
        .carousel-item {
            position: absolute;
            top: 0;
            left: 100%;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: all 0.5s ease-in-out;
        }
        .carousel-item.active {
            left: 0;
            opacity: 1;
        }
        .carousel img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .carousel-text {
            position: absolute;
            top: 50%;
            left: 10%;
            transform: translateY(-50%);
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }
        .carousel-control {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            font-size: 2rem;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
        }
        .carousel-control.prev {
            left: 10px;
        }
        .carousel-control.next {
            right: 10px;
        }
        .carousel-progress-bar {
            position: absolute;
            bottom: 0;
            left: 0;
            height: 4px;
            background-color: #007bff;
            transition: width 0.4s ease-in-out;
        }

        /* Filter Bar */
        .filter-bar {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 20px 0;
        }
        .filter-bar button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .filter-bar button:hover {
            background-color: #0056b3;
        }

        /* Card Styles */
        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin: 20px;
        }
        .card {
            position: relative;
            width: 300px;
            height: 300px;
            background-size: cover;
            background-position: center;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
        }
        .card-text {
            position: absolute;
            bottom: 10%;
            left: 5%;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }
        .card a {
            text-decoration: none;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
        }
        .card a:hover {
            background-color: #0056b3;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 20px;
            background-color: #f8f9fa;
            color: #6c757d;
        }
        .social-icons a {
            margin: 0 10px;
            color: #6c757d;
            font-size: 1.2em;
            text-decoration: none;
        }
        .social-icons a:hover {
            color: #007bff;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }
        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            width: 70%;
            max-width: 500px;
        }
        .modal h2 {
            margin-top: 0;
        }
        .modal .close {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Notification Styles */
        .notification {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            display: none;
            transition: all 0.3s ease;
        }
    </style>
</head>
<body>
    <div class="home-page">
        <!-- Carousel -->
        <div class="carousel">
            <div class="carousel-progress-bar"></div>
            <div class="carousel-item active">
                <img src="images/AR-15.png" alt="Senapan">
                <div class="carousel-text">
                    <h1>Discover <br>Our <br>Best Products</h1>
                    <a href="#" class="btn">Start Shopping</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/Barrett M107.png" alt="Sniper">
                <div class="carousel-text">
                    <h1>Unleash <br>Your Power</h1>
                    <a href="#" class="btn">Explore Now</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/FN SCAR.png" alt="Senjata Taktis">
                <div class="carousel-text">
                    <h1>Achieve <br>Perfection</h1>
                    <a href="#" class="btn">Shop Now</a>
                </div>
            </div>
            <button class="carousel-control prev" onclick="prevSlide()">&#10094;</button>
            <button class="carousel-control next" onclick="nextSlide()">&#10095;</button>
        </div>

        <!-- Filter Bar -->
        <div class="filter-bar">
            <button onclick="filterProducts('all')">All</button>
            <button onclick="filterProducts('senapan')">Senapan</button>
            <button onclick="filterProducts('pistol')">Pistol</button>
            <button onclick="filterProducts('senapan-taktis')">Senapan Taktis</button> <!-- Added button for tactical rifles -->
        </div>

        <!-- Product Cards -->
        <div class="content" id="product-container">
            <div class="card" data-category="senapan" style="background-image: url('images/AR-15.png');" onclick="openModal('AR-15 Semi-Automatic Rifle', 'This is a versatile semi-automatic rifle, known for its accuracy and customizability.')">
                <div class="card-text">
                    <h2>AR-15 Semi-Automatic Rifle</h2>
                    <a href="#">Shop Now</a>
                </div>
            </div>
            <div class="card" data-category="pistol" style="background-image: url('images/Glock 19.png');" onclick="openModal('Glock 19 Compact Pistol', 'A compact pistol known for its reliability and performance.')">
                <div class="card-text">
                    <h2>Glock 19 Compact Pistol</h2>
                    <a href="#">Shop Now</a>
                </div>
            </div>
            <div class="card" data-category="senapan-taktis" style="background-image: url('images/FN SCAR.png');" onclick="openModal('FN SCAR Rifle', 'A modular assault rifle designed for special forces.')">
                <div class="card-text">
                    <h2>FN SCAR Rifle</h2>
                    <a href="#">Shop Now</a>
                </div>
            </div>
            <!-- Added Barrett M107 and Colt 1911 -->
            <div class="card" data-category="senapan" style="background-image: url('images/Barrett M107.png');" onclick="openModal('Barrett M107 Sniper', 'Sniper jarak jauh hingga 1.800 m, untuk operasi militer.')">
                <div class="card-text">
                    <h2>Barrett M107 Sniper</h2>
                    <a href="#">Shop Now</a>
                </div>
            </div>
            <div class="card" data-category="pistol" style="background-image: url('images/Colt 1911.png');" onclick="openModal('Colt 1911 Pistol', 'Pistol ikonik militer AS, desain sederhana dan andal.')">
                <div class="card-text">
                    <h2>Colt 1911 Pistol</h2>
                    <a href="#">Shop Now</a>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <p>&copy; Firearms Sales Company. All Rights Reserved. 2024.</p>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
            </div>
        </footer>
    </div>

    <!-- Modal -->
    <div id="product-modal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">Ã—</span>
            <h2 id="product-name"></h2>
            <p id="product-description"></p>
            <button class="btn" onclick="addToCart()">Add to Cart</button>
        </div>
    </div>

    <!-- Notification -->
    <div id="notification" class="notification">Product added to cart!</div>

    <script>
        // Carousel Script
        const items = document.querySelectorAll('.carousel-item');
        let currentIndex = 0;

        function showNextSlide() {
            items[currentIndex].classList.remove('active');
            currentIndex = (currentIndex + 1) % items.length;
            items[currentIndex].classList.add('active');
        }

        function showPrevSlide() {
            items[currentIndex].classList.remove('active');
            currentIndex = (currentIndex - 1 + items.length) % items.length;
            items[currentIndex].classList.add('active');
        }

        function updateProgressBar() {
            const progressBar = document.querySelector('.carousel-progress-bar');
            const percent = (currentIndex + 1) / items.length * 100;
            progressBar.style.width = percent + '%';
        }

        setInterval(() => {
            showNextSlide();
            updateProgressBar();
        }, 4000); // Ganti gambar setiap 4 detik

        // Modal Functions
        function openModal(name, description) {
            document.getElementById('product-name').textContent = name;
            document.getElementById('product-description').textContent = description;
            document.getElementById('product-modal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('product-modal').style.display = 'none';
        }

        // Cart Notification
        function addToCart() {
            document.getElementById('notification').style.display = 'block';
            setTimeout(() => {
                document.getElementById('notification').style.display = 'none';
            }, 3000);
        }

        // Filter Products
        function filterProducts(category) {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                if (category === 'all' || card.dataset.category === category) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>
